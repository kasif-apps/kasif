{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "pnpm run build",
    "beforeDevCommand": "pnpm run dev",
    "devPath": "http://localhost:5010",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Kâşif UI Tool",
    "version": "0.1.0"
  },
  "tauri": {
    "macOSPrivateApi": true,
    "cli": {
      "description": "Kâşif UI Tool CLI",
      "longDescription": "Run your Kâşif app with additional flags",
      "args": [
        {
          "name": "debug",
          "takesValue": false
        },
        {
          "name": "plugin",
          "takesValue": true,
          "multiple": true
        }
      ]
    },
    "allowlist": {
      "fs": {
        "all": true,
        "scope": ["**"]
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      },
      "all": false
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.kasif.dev",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      },
      "resources": []
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "width": 1100,
        "height": 660,
        "resizable": true,
        "title": "Kasif | UI Tool",
        "transparent": true,
        "decorations": false
      }
    ]
  }
}
