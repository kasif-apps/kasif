{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "declaration": true,
    "jsx": "react-jsx",
    "paths": {
      "@kasif/pages/*": ["./src/pages/*"],
      "@kasif/components/*": ["./src/components/*"],
      "@kasif/managers/*": ["./src/managers/*"],
      "@kasif/util/*": ["./src/util/*"],
      "@kasif/assets/*": ["./src/assets/*"],
      "@kasif/guards/*": ["./src/guards/*"],
      "@kasif/config/*": ["./src/config/*"],
      "@kasif/locales/*": ["./src/locales/*"],
      "@kasif/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
